package org.riss.bizconnect.hr.document.model.service;

import java.util.List;

import org.riss.bizconnect.hr.document.model.dao.ContractsDAO;
import org.riss.bizconnect.hr.document.model.dto.Contract;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

@Service("contractService")
public class ContractsServiceImpl implements ContractService {
	
	@Autowired
	private ContractsDAO contractDAO;

	@Override
    public List<Contract> selectContracts() {
        return contractDAO.selectContracts();
    }

    @Override
    public Contract selectContractById(String contractId) {
        return contractDAO.selectContractById(contractId);
    }

    @Override
    public int insertContract(Contract contract) {
        return contractDAO.insertContract(contract);
    }

    @Override
    public int updateContract(Contract contract) {
        return contractDAO.updateContract(contract);
    }

	@Override
	public int deleteContract(String ContractId) {
		return contractDAO.deleteContract(ContractId);
	}

	
   

	
}
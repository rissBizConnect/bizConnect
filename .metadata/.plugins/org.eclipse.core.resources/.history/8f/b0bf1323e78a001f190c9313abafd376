package org.riss.bizconnect.hr.document.model.dao;

import java.util.List;

import org.mybatis.spring.SqlSessionTemplate;
import org.riss.bizconnect.hr.document.model.dto.Document;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

@Repository("documentDao")
public class DocumentDao {

	@Autowired
    private SqlSessionTemplate sqlSessionTemplate;
	
	public void saveContract(Document document) {
		SqlSessionTemplate.insertContract(document);
    }

    public void saveCertificate(Document document) {
    	SqlSessionTemplate.insertCertificate(document);
    }

    public List<Document> getAllContracts() {
        return SqlSessionTemplate.selectAllContracts();
    }

    public List<Document> getAllCertificates() {
        return SqlSessionTemplate.selectAllCertificates();
    }

    public Document getContractById(String contractId) {
        return SqlSessionTemplate.selectContractById(contractId);
    }
}

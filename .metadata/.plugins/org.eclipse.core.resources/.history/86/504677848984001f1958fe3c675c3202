<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC
 "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="retireviewMapper">

	<resultMap type="Retire" id="resultRetire">
		<result property="RET_NO" column="retire_no" />
		<result property="RET_TYPE" column="ret_type" />
		<result property="RET_EXITREASON" column="ret_exitreason" />
		<result property="RET_DATE" column="ret_date" />
		<result property="RET_TOTAL_DATE" column="ret_total_date" />
		<result property="GID" column="gid" />
		<result property="COM_CODE" column="LicenseCode" />
	</resultMap>


    <!-- 퇴직자 목록 조회 -->
    <select id="selectAllRetirees" resultType="resultRetire">
        SELECT * FROM retirees
    </select>

    <!-- 퇴직자 추가 -->
    <insert id="insertRetiree" parameterType="string">
        INSERT INTO retiree (retire_id, retire_name, user_entry_date, ret_date, ret_type)
        VALUES (#{retireId}, #{retireName}, #{user_entry_date}, #{ret_date}, #{ret_type})
    </insert>

    <!-- 퇴직자 수정 -->
    <update id="updateRetiree">
        UPDATE retiree
        SET retire_name = #{retireName}, user_entry_date = #{user_entry_date},
            ret_date = #{ret_date}, ret_type = #{ret_type}
        WHERE retire_id = #{retireId}
    </update>

    <!-- 퇴직자 삭제 -->
    <delete id="deleteRetiree">
        DELETE FROM retiree WHERE retire_id = #{retireId}
    </delete>

</mapper>
package org.riss.bizconnect.hr.retire.model.dao;

import java.util.List;
import java.util.Map;

import org.mybatis.spring.SqlSessionTemplate;
import org.riss.bizconnect.hr.retire.model.dto.Retire;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

@Repository
public class RetireDAO implements java.io.Serializable {
	@Autowired
	private SqlSessionTemplate sqlSessionTemplate;
	
    // 퇴직자 목록 조회
    public List<Retire> selectRetireList() {
        return sqlSessionTemplate.selectList("org.riss.bizconnect.hr.retire.model.mapper.RetireMapper.selectRetireList");
    }

    // 퇴직자 추가
    public int insertRetire(Retire retiree) {
        return sqlSessionTemplate.insert("org.riss.bizconnect.hr.retire.model.mapper.RetireMapper.insertRetire", retiree);
    }

    // 퇴직자 수정
    public int updateRetire(Retire retiree) {
        return sqlSessionTemplate.update("org.riss.bizconnect.hr.retire.model.mapper.RetireMapper.updateRetire", retiree);
    }

    // 퇴직자 삭제
    public int deleteRetire(int retireNo) {
        return sqlSessionTemplate.delete("org.riss.bizconnect.hr.retire.model.mapper.RetireMapper.deleteRetire", retireNo);
    }

    // 사원으로 변환
    public int convertRetireToUser(String gid, String comCode, int retireNo) {
        return sqlSessionTemplate.update("org.riss.bizconnect.hr.retire.model.mapper.RetireMapper.convertRetireToUser", 
                                 Map.of("gid", gid, "comCode", comCode, "retireNo", retireNo));
    }
}

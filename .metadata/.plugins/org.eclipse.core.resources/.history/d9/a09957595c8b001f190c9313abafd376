package org.riss.bizconnect.hr.document.model.controller;

import java.util.List;

import org.riss.bizconnect.hr.document.model.dto.Certificate;
import org.riss.bizconnect.hr.document.model.service.CertificateService;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.servlet.ModelAndView;

@Controller
public class CertificateController {
    
    @Autowired
    private CertificateService certificateService; // 서비스 주입
    
 // 증명서 목록 조회
    @GetMapping("retList.do")
    public ModelAndView listCertificates() {
        List<Certificate> certificateList = certificateService.getCertificates();
        ModelAndView mav = new ModelAndView("certificateList");
        mav.addObject("certificateList", certificateList);
        return mav;
    }

    // 증명서 상세 보기
    @GetMapping("retView.do")
    public ModelAndView viewCertificate(@PathVariable int contractId) {
        Certificate certificate = certificateService.getCertificateById(contractId);
        ModelAndView mav = new ModelAndView("certificate_list");
        mav.addObject("certificate", certificate);
        return mav;
    }

    // 증명서 추가
    @PostMapping("retAdd.do")
    public String addCertificate(Certificate certificate) {
        certificateService.addCertificate(certificate);
        return "redirect:/certificates/list";
    }

    // 증명서 수정
    @PostMapping("retUpdate.do")
    public String updateCertificate(Certificate certificate) {
        certificateService.modifyCertificate(certificate);
        return "redirect:/certificates/list";
    }

    // 증명서 삭제
    @PostMapping("retDelete.do")
    public String deleteCertificate(@PathVariable int contractId) {
        certificateService.removeCertificate(contractId);
        return "redirect:/certificates/list";
    }
}

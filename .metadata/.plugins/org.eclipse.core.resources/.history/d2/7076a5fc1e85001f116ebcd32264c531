package org.riss.bizconnect.hr.retire.model.dao;

import org.riss.bizconnect.hr.retire.model.dto.Retire;
import org.springframework.stereotype.Repository;
import java.util.List;

@Repository
public class RetireDAO {
    // 퇴직자 목록 조회
    public List<Retire> selectRetireeList() {
        return sqlSession.selectList("org.riss.bizconnect.hr.retiree.model.mapper.RetireeMapper.selectRetireeList");
    }

    // 퇴직자 추가
    public int insertRetiree(Retire retiree) {
        return sqlSession.insert("org.riss.bizconnect.hr.retiree.model.mapper.RetireeMapper.insertRetiree", retiree);
    }

    // 퇴직자 수정
    public int updateRetiree(Retire retiree) {
        return sqlSession.update("org.riss.bizconnect.hr.retiree.model.mapper.RetireeMapper.updateRetiree", retiree);
    }

    // 퇴직자 삭제
    public int deleteRetiree(int retireNo) {
        return sqlSession.delete("org.riss.bizconnect.hr.retiree.model.mapper.RetireeMapper.deleteRetiree", retireNo);
    }

    // 사원으로 변환
    public int convertRetireeToUser(String gid, String comCode, int retireNo) {
        return sqlSession.update("org.riss.bizconnect.hr.retiree.model.mapper.RetireeMapper.convertRetireeToUser", 
                                 Map.of("gid", gid, "comCode", comCode, "retireNo", retireNo));
    }
}

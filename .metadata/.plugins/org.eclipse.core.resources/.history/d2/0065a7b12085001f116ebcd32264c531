package org.riss.bizconnect.hr.retire.model.dao;

import org.riss.bizconnect.hr.retire.model.dto.Retiree;
import org.springframework.stereotype.Repository;
import java.util.List;

@Repository
public class RetireeDAO {
    // 퇴직자 목록 조회
    public List<Retire> selectRetireList() {
        return sqlSession.selectList("org.riss.bizconnect.hr.retire.model.mapper.RetireMapper.selectRetireList");
    }

    // 퇴직자 추가
    public int insertRetire(Retire retiree) {
        return sqlSession.insert("org.riss.bizconnect.hr.retire.model.mapper.RetireMapper.insertRetire", retiree);
    }

    // 퇴직자 수정
    public int updateRetire(Retire retiree) {
        return sqlSession.update("org.riss.bizconnect.hr.retire.model.mapper.RetireMapper.updateRetire", retiree);
    }

    // 퇴직자 삭제
    public int deleteRetire(int retireNo) {
        return sqlSession.delete("org.riss.bizconnect.hr.retire.model.mapper.RetireMapper.deleteRetire", retireNo);
    }

    // 사원으로 변환
    public int convertRetireToUser(String gid, String comCode, int retireNo) {
        return sqlSession.update("org.riss.bizconnect.hr.retire.model.mapper.RetireMapper.convertRetireToUser", 
                                 Map.of("gid", gid, "comCode", comCode, "retireNo", retireNo));
    }
}

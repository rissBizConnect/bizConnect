package org.riss.bizconnect.hr.document.model.service;

import java.util.List;

import org.riss.bizconnect.hr.document.model.dao.CertificateDAO;
import org.riss.bizconnect.hr.document.model.dto.Certificate;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

@Service("documentService")
public class CertificateServiceImpl implements CertificateService {
	
	@Autowired
	private CertificateDAO certificateDAO;

	@Override
    public void addCertificate(Certificate certificate) {
        certificateDAO.insertCertificate(certificate); // 증명서 추가
    }

    @Override
    public List<Certificate> listCertificates(String gid, String comCode) {
        return certificateDAO.selectCertificates(gid, comCode); // 증명서 목록 조회
    }

    @Override
    public void modifyCertificate(Certificate certificate) {
        certificateDAO.updateCertificate(certificate); // 증명서 수정
    }

    @Override
    public void removeCertificate(Certificate certificate) {
        certificateDAO.deleteCertificate(certificate); // 증명서 삭제
    }

	@Override
	public void insertCertificate(Certificate certificate) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public ArrayList<Certificate> selectCertificates(String gid, String comCode) {
		return certificateDAO.selectCertificates(gid, comCode); // 증명서 목록 조회
	}

	@Override
	public void updateCertificate(Certificate certificate) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void deleteCertificate(Certificate certificate) {
		// TODO Auto-generated method stub
		
	}
	
}
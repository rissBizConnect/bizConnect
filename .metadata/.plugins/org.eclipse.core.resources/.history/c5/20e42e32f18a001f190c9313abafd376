<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC
 "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="certificatesMapper">

	<insert id="insertContract" parameterType="Document">
		INSERT INTO contracts (contractId, dm_date, dm_file, dm_title,
		dm_description)
		VALUES (#{contractId}, #{dm_date}, #{dm_file}, #{dm_title},
		#{dm_description})
	</insert>

	<insert id="insertCertificate" parameterType="Document">
		INSERT INTO certificates (certificateId, dm_date, dm_file, dm_title,
		dm_description)
		VALUES (#{certificateId}, #{dm_date}, #{dm_file}, #{dm_title},
		#{dm_description})
	</insert>

	<select id="selectAllContracts" resultType="Document">
		SELECT * FROM contracts
	</select>

	<select id="selectAllCertificates" resultType="Document">
		SELECT * FROM certificates
	</select>

	<select id="selectContractById" parameterType="String"
		resultType="Document">
		SELECT * FROM contracts WHERE contractId = #{contractId}
	</select>

	<select id="selectCertificateById" parameterType="String"
		resultType="Document">
		SELECT * FROM certificates WHERE certificateId = #{certificateId}
	</select>

</mapper>

package org.riss.bizconnect.hr.document.model.service;

import java.util.List;

import org.riss.bizconnect.hr.document.model.dto.Certificate;

public interface CertificateService {
	   
	// 증명서 목록 조회
    List<Certificate> getCertificates();

    // 증명서 상세 조회
    Certificate getCertificateById(int contractId);

    // 증명서 추가
    int addCertificate(Certificate certificate);

    // 증명서 수정
    int modifyCertificate(Certificate certificate);

    // 증명서 삭제
    int removeCertificate(int contractId);
}

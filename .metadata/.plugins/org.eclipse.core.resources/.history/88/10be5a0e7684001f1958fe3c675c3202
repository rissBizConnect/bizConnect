package org.riss.bizconnect.hr.retire.model.dao;

import org.mybatis.spring.SqlSessionTemplate;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

@Repository("retireDAO")
public class RetireDAO {
	@Autowired
	private SqlSessionTemplate sqlSessionTemplate;

	 // 퇴직자 목록 조회
    public List<Retire> getRetireeList() {
        return SqlSessionTemplate.selectList(namespace + ".selectRetireeList");
    }

    // 퇴직자 추가
    public int addRetiree(Retire retiree) {
        return SqlSessionTemplate.insert(namespace + ".insertRetiree", retiree);
    }

    // 퇴직자 수정
    public int updateRetiree(Retire retiree) {
        return SqlSessionTemplate.update(namespace + ".updateRetiree", retiree);
    }

    // 퇴직자 삭제
    public int deleteRetiree(int retireId) {
        return SqlSessionTemplate.delete(namespace + ".deleteRetiree", retireId);
    }
}

package org.riss.bizconnect.hr.document.model.service;

import java.util.ArrayList;
import java.util.List;

import org.riss.bizconnect.common.model.dto.Paging;
import org.riss.bizconnect.hr.document.model.dao.CertificateDAO;
import org.riss.bizconnect.hr.document.model.dto.Certificate;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

@Service("documentService")
public class CertificateServiceImpl implements CertificateService {
	
	@Autowired
	private Certificate certificate;

	@Override
    public int addCertificate(Certificate contract) {
        return Certificate.insertCertificate(contract);
    }

    @Override
    public Certificate getCertificate(String contractId) {
        return Certificate.selectCertificate(contractId);
    }

    @Override
    public int updateContract(Certificate contract) {
        return Certificate.updateCertificate(contract);
    }

    @Override
    public int deleteCertificate(String contractId) {
        return Certificate.deleteCertificate(contractId);
    }

    @Override
    public List<Certificate> searchCertificate(String title) {
        return Certificate.searchCertificate(title);
    }
	
}
<configuration>
<!-- 마아바티스는 sql 구문에 사용되는 값이 null 이면 에러 발생함.
		null 을 사용할 수 있게 하려면 아래의 설정을 추가함
	 -->
	<settings>
		<setting name="jdbcTypeForNull" value="NULL" />
		<setting name="cacheEnabled" value="false"/>
	</settings>

	<typeAliases>	
		<typesAlias type="org.riss.bizconnect.main.member.model.dto.User" alias="User" />
		<typesAlias type="org.riss.bizconnect.hr.attendance.model.dto.Attendance" alias="Attendance" />
		<typesAlias type="org.riss.bizconnect.common.model.dto.Member" alias="Member" />
		<typeAlias type="org.riss.bizconnect.hr.retire.model.dto.Retire" alias="Retire" />
	</typeAliases>
	
	<mappers>
		<mapper resource="mappers/attendance-mapper.xml" />
 		<mapper resource="mappers/memberMapper.xml"/>
		<mapper resource="mappers/retireview-mapper.xml" />
	</mappers>
	
	<settings>
		<setting name="jdbcTypeForNull" value="NULL" />
		<setting name="cacheEnabled" value="false"/>
	</settings>


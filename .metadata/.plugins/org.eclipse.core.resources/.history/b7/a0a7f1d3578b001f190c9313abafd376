package org.riss.bizconnect.hr.document.model.dao;

import java.util.ArrayList;
import java.util.List;

import org.mybatis.spring.SqlSessionTemplate;
import org.riss.bizconnect.common.model.dto.Paging;
import org.riss.bizconnect.hr.attendance.model.dto.Attendance;
import org.riss.bizconnect.hr.document.model.dto.Certificate;
import org.riss.bizconnect.hr.retire.model.dto.Retire;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

@Repository("documentDao")
public class CertificateDAO {

	@Autowired
    private SqlSessionTemplate sqlSessionTemplate;

	public int insertCertificate(Certificate certificate) {
		sqlSessionTemplate.insert("certificatesMapper.deleteCertificate", certificate);
	}

	public Certificate selectCertificate(String certificateId) {
		sqlSessionTemplate.select("certificatesMapper.deleteCertificate", certificateId);
	}

	public int updateCertificate(Certificate certificate) {
		sqlSessionTemplate.update("certificatesMapper.updateCertificate", certificate);
	}

	public int deleteCertificate(String certificateId) {
		sqlSessionTemplate.delete("certificatesMapper.deleteCertificate", certificateId);
	}

	public List<Certificate> selectListCertificates(String title) {
		List<Certificate> list = sqlSessionTemplate.selectList("certificatesMapper.searchCertificates", title);
		return (ArrayList<Certificate>)list;
	}

	


	
}
	
